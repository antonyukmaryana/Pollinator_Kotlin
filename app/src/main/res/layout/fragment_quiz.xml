<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".QuizFragment">

    <TextView
        android:id="@+id/answerC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:text="Welcome to Pollinator!"
        app:layout_constraintBottom_toTopOf="@+id/editText6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:text="here you can:"
        app:layout_constraintBottom_toTopOf="@+id/takeQuizButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerC" />

    <Button
        android:id="@+id/takeQuizButton"
        android:layout_width="355dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="54dp"
        android:text="take quizzes"
        app:layout_constraintBottom_toTopOf="@+id/createQuizButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText6" />

    <Button
        android:id="@+id/createQuizButton"
        android:layout_width="339dp"
        android:layout_height="58dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="104dp"
        android:text="create quizzes"
        app:layout_constraintStart_toStartOf="@+id/takeQuizButton"
        app:layout_constraintTop_toBottomOf="@+id/takeQuizButton" />

</androidx.constraintlayout.widget.ConstraintLayout>